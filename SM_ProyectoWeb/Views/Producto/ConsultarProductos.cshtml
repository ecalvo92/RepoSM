@model IEnumerable<ProductoModel>

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<div class="card mb-4 mt-4">

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-primary text-center">
            @ViewBag.Mensaje
        </div>
    }

    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="m-0 flex-grow-1 text-center">Productos</h4>
        <a asp-action="AgregarProductos" asp-controller="Producto" class="btn btn-outline-primary ms-2">
            Agregar
        </a>
    </div>

    <div class="card-body">
        
        <table class="table mb-4">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    <th>Imagen</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ConsecutivoProducto</td>
                        <td>@item.Nombre</td>
                        <td>@item.Precio.ToString("N2")</td>
                        <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                        <td><img src="@($"{item.Imagen}{item.ConsecutivoProducto}.png")" width="100" height="100" /></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>



