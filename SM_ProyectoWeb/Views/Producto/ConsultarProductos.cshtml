@model IEnumerable<ProductoModel>

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<div class="card mb-4 mt-4">

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-primary text-center">
            @ViewBag.Mensaje
        </div>
    }

    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="m-0 flex-grow-1 text-center">Productos</h4>
        <a asp-action="AgregarProductos" asp-controller="Producto" class="btn btn-outline-primary ms-2">
            Agregar
        </a>
    </div>

    <div class="card-body">

        <table id="Tabla" class="table mb-4">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ConsecutivoProducto</td>
                        <td>@item.Nombre</td>
                        <td>@item.Precio.ToString("N2")</td>
                        <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                        <td><img src="@($"{item.Imagen}{item.ConsecutivoProducto}.png")" width="100" height="100" /></td>
                       
                        <td>
                            <a asp-action="ActualizarProductos" asp-controller="Producto" asp-route-id="@item.ConsecutivoProducto">
                                <i class="fa fa-edit" style="font-size:22px;"></i>
                            </a>

                            <div class="form-check form-switch d-inline-block ms-2">
                                <input class="form-check-input toggle-status"
                                       type="checkbox"
                                       role="switch"
                                       id="switch-@item.ConsecutivoProducto"
                                       data-bs-toggle="modal"
                                       data-bs-target="#staticBackdrop"
                                       data-id="@item.ConsecutivoProducto"
                                       data-name="@item.Nombre"
                                       data-status="@item.Estado"
                                       @(item.Estado ? "checked" : "") />
                                <label class="form-check-label" for="switch-@item.ConsecutivoProducto">
                                    @(item.Estado ? "Activo" : "Inactivo")
                                </label>
                            </div>

                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Confirmación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 id="message" class="text-info fw-bold text-center"></h6>
            </div>
            <div class="modal-footer">

                <form asp-action="CambiarEstadoProducto" asp-controller="Producto">
                    <input type="hidden" id="ConsecutivoProducto" name="ConsecutivoProducto">
                    <button type="submit" class="btn btn-primary">Procesar</button>
                </form>

            </div>
        </div>
    </div>
</div>

<script src="~/js/ConsultarProductos.js" asp-append-version="true"></script>