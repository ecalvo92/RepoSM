@model UsuarioModel

@{
    Layout = "_LayoutExterno";
}

<div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">
        <div class="card">
            <div class="card-body">
                <div class="app-brand justify-content-center">
                    <a class="app-brand-link gap-2">
                        <img src="~/lib/img/logo.png" />
                        <span class="app-brand-text demo text-body fw-bolder">Crear Cuenta</span>
                    </a>
                </div>

                <form class="mb-3" asp-action="Registro" asp-controller="Home">
                    <div class="mb-3">
                        <label for="username" class="form-label">Identificación</label>
                        <input type="text" class="form-control" asp-for="Identificacion" />
                    </div>

                    <div class="mb-3">
                        <label for="username" class="form-label">Nombre</label>
                        <input type="text" class="form-control" asp-for="Nombre" />
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" asp-for="CorreoElectronico" />
                    </div>

                    <div class="mb-3 form-password-toggle">
                        <label class="form-label" for="password">Contraseña</label>
                        <div class="input-group input-group-merge">
                            <input type="password" class="form-control" asp-for="Contrasenna" />
                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>
                    </div>

                    <button class="btn btn-primary d-grid w-100" type="submit">Procesar</button>
                </form>

                <p class="text-center">
                    <span>Ya tienes una cuenta?</span>
                    <a asp-action="Index" asp-controller="Home">
                        <span>Iniciar Sesión</span>
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>