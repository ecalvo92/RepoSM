@model IEnumerable<UsuarioModel>

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<style>
    .tienda-card {
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

        .tienda-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }
</style>

<div class="card mb-4 mt-4">

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-primary text-center">
            @ViewBag.Mensaje
        </div>
    }

    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="m-0 flex-grow-1 text-center">Tiendas</h4>
    </div>

    <div class="card-body">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card tienda-card h-100 p-3 text-center">

                        <img src="@($"{item.ImagenComercial}{item.ConsecutivoUsuario}.png")"
                             alt="@item.NombreComercial"
                             class="img-fluid mb-3" style="height:150px; object-fit:cover;" />

                        <h5 class="card-title">@item.NombreComercial</h5>
                        <h5 class="card-title">@item.Nombre</h5>

                    </div>
                </div>
            }
        </div>

    </div>
</div>
