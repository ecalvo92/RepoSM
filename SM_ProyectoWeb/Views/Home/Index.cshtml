@model UsuarioModel

@{
    Layout = "_LayoutExterno";
}

<div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">
        <div class="card">
            <div class="card-body">
                <div class="app-brand justify-content-center">
                    <a class="app-brand-link gap-2">
                        <img src="~/lib/img/logo.png" />
                        <span class="app-brand-text demo text-body fw-bolder">Iniciar Sesión</span>
                    </a>
                </div>

                <form class="mb-3" asp-action="Index" asp-controller="Home">
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" asp-for="CorreoElectronico" />
                    </div>

                    <div class="mb-3 form-password-toggle">
                        <div class="d-flex justify-content-between">
                            <label class="form-label" for="password">Contraseña</label>
                            <a asp-action="RecuperarAcceso" asp-controller="Home">
                                <small>Olvidó su contraseña?</small>
                            </a>
                        </div>

                        <div class="input-group input-group-merge">
                            <input type="password" class="form-control" asp-for="Contrasenna" />
                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>

                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary d-grid w-100" type="submit">Procesar</button>
                    </div>
                </form>

                <p class="text-center">
                    <span>Nuevo en nuestro sistema?</span>
                    <a asp-action="Registro" asp-controller="Home">
                        <span>Crear Cuenta</span>
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>