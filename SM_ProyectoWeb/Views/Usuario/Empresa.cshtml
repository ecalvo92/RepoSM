@model UsuarioModel

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<div class="card mb-4 mt-4">

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-primary text-center">
            @ViewBag.Mensaje
        </div>
    }

    <h4 class="card-header text-center">Empresa</h4>
    <div class="card-body">

        <div class="row">

            <div class="col-md-2"></div>
            <div class="col-md-8">
                <form id="FormEmpresa" class="mb-3" asp-action="Empresa" asp-controller="Usuario" enctype="multipart/form-data">

                    <div class="row align-items-center mb-3">
                        <div class="col-9">
                            <label class="form-label">Nombre Comercial</label>
                            <input type="text" class="form-control" asp-for="NombreComercial" />
                        </div>

                        <div class="col-3 text-center">

                            @if (Model.NombreComercial != "")
                            {
                                <img src="@($"{Model.ImagenComercial}{Model.ConsecutivoUsuario}.png")"
                                     width="150" height="130" />
                            }
                            else
                            {
                                <img src="~/empresas/nada.png" width="110" height="110" />
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Imagen Comercial</label>
                        <input type="file" class="form-control" asp-for="ImagenComercial" />
                    </div>

                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary d-grid w-25" type="submit">Procesar</button>
                    </div>

                </form>
            </div>

        </div>

    </div>
</div>

<script src="~/js/Empresa.js" asp-append-version="true"></script>